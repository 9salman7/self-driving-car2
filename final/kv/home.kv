#:kivy 1.11.1
<HomeScreen>:
    name: "home_screen"
    on_enter:
        img=root.build()

    MDToolbar:
        id: toolbar
        title: "Test MDBottomNavigation"
        md_bg_color: app.theme_cls.primary_color
        left_action_items: [["menu", lambda x: None]]

    MDBottomNavigation:
        id: panel

        MDBottomNavigationItem:
            name: "home"
            text: "Home"
            icon: "home-variant"

            MDCard:
                orientation: "vertical"
                padding: "1dp"
                size_hint: None, None
                size: "320dp", "320dp"
                pos_hint: {"center_x": .5, "center_y": .7}
                MDLabel:
                    text: "  "
                    bold: True
                    theme_text_color: "Primary"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
   
                MDLabel:
                    text: "Camera Stream"
                    bold: True
                    theme_text_color: "Primary"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    font_style: "H5"

                #MDSeparator:
                #    height: "1dp"

                #MDLabel:
                #    text: "Pi Camera Stream"
                Image:
                    id: vid
                    source: "camera.jpg"

            BoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": .5, "center_y": .55}

                MDLabel:
                    id: obst
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    font_style: "H5"
                    color: utils.get_color_from_hex("#e01616")

                MDLabel:
                    id: stat
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "center"
                    font_style: "H5"
                    color: utils.get_color_from_hex("#0000EE")
                   
                MDFillRoundFlatButton:
                    text: "Start Car"
                    bold: True
                    size_hint_x: 0.8
                    pos_hint: {"center_x": .5}
                    on_release:
                        root.carControl("start")
                MDRoundFlatButton:
                    text: "Stop Car"
                    bold: True
                    size_hint_x: 0.8
                    pos_hint: {"center_x": .5}
                    on_release:
                        root.carControl("stop")
                MDFillRoundFlatButton:
                    text: "Speech Recognition"
                    bold: True
                    size_hint_x: 0.8
                    pos_hint: {"center_x": .5}
                    on_release:
                        root.speechRec()
                MDRoundFlatButton:
                    text: "Exit"
                    bold: True
                    size_hint_x: 0.8
                    pos_hint: {"center_x": .5}
                    on_release:
                        app.manage_screens("login_screen", "add")
                        app.change_screen("login_screen")

        MDBottomNavigationItem:
            name: "team"
            text: "Team"
            icon: "account"

            BoxLayout:

                orientation: "vertical"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint: 1, 0.25
                    size: "280dp", "180dp"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDLabel:
                        text: "Mohamed Salman"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                    MDSeparator:
                        height: "1dp"

                    Image:
                        source: "images/salman.jpg"

                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint: 1, 0.25
                    size: "280dp", "180dp"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDLabel:
                        text: "R Manoj"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                    MDSeparator:
                        height: "1dp"

                    #MDLabel:
                    #    text: "Pi Camera Stream"
