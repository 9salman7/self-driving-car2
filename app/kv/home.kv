#:kivy 1.11.1
<HomeScreen>:
    name: "home_screen"
    on_enter:
        img=root.build()

    MDToolbar:
        id: toolbar
        title: "Test MDBottomNavigation"
        md_bg_color: app.theme_cls.primary_color
        left_action_items: [["menu", lambda x: None]]

    MDBottomNavigation:
        id: panel

        MDBottomNavigationItem:
            name: "home"
            text: "Home"
            icon: "home-variant"

            MDCard:
                orientation: "vertical"
                padding: "8dp"
                size_hint: None, None
                size: "280dp", "180dp"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    text: "Camera Stream"
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSeparator:
                    height: "1dp"

                #MDLabel:
                #    text: "Pi Camera Stream"
                Image:
                    id: vid
                    source: "camera.jpg"

        MDBottomNavigationItem:
            name: "team"
            text: "Team"
            icon: "account"

            BoxLayout:
                orientation: "vertical"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint: 1, 0.25
                    size: "280dp", "180dp"
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDLabel:
                        text: "Mohamed Salman"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                    MDSeparator:
                        height: "1dp"

                    Image:
                        source: "salman.jpg"

                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
